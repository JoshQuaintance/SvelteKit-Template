{
    "name": "sveltekit-template",
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "scripts": {
        "prepare": "husky install",
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "test:all": "pnpm run test:unit && pnpm run test:com && pnpm run test:e2e",
        "test:playwright": "pnpm run test:com && pnpm run test:e2e",
        "test:com": "playwright test -c playwright-ct.config.ts",
        "test:e2e": "playwright test -c playwright.config.ts",
        "test:unit": "vitest run",
        "test:unit-watch": "vitest",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "prelint": "pnpm run format",
        "lint": "eslint .gitignore .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write ."
    },
    "lint-staged": {
        "*.{js,ts,svelte}": [
            "pnpm run check",
            "pnpm run lint",
            "pnpm run test:all"
        ]
    },
    "devDependencies": {
        "@fontsource/fira-mono": "^4.5.10",
        "@playwright/test": "1.29.1",
        "@sveltejs/adapter-auto": "^1.0.2",
        "@sveltejs/kit": "^1.2.6",
        "@types/cookie": "^0.5.1",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@vitest/ui": "^0.26.3",
        "autoprefixer": "^10.4.13",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "postcss": "^8.4.21",
        "prettier": "^2.8.3",
        "prettier-plugin-svelte": "^2.9.0",
        "svelte": "^3.55.1",
        "svelte-check": "^3.0.3",
        "svelte-preprocess": "^5.0.1",
        "tailwindcss": "^3.2.4",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.4",
        "vitest": "^0.26.3"
    },
    "dependencies": {
        "@playwright/experimental-ct-svelte": "^1.29.2"
    }
}
