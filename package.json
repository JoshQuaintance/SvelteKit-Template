{
    "name": "sveltekit-template",
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "scripts": {
        "prepare": "husky install",
        "dev": "vite dev",
        "prebuild": "pnpm run test:all",
        "build": "vite build",
        "preview": "vite preview",
        "test:all": "pnpm run test:unit && pnpm run test:com && pnpm run test:e2e",
        "test:playwright": "pnpm run test:com && pnpm run test:e2e",
        "test:com": "playwright test -c playwright-ct.config.ts",
        "test:e2e": "playwright test",
        "test:unit": "vitest run",
        "test:unit-watch": "vitest",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "prelint": "pnpm run format",
        "lint": "eslint .gitignore .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write ."
    },
    "lint-staged": {
        "*.{js,ts,svelte}": [
            "pnpm run check",
            "pnpm run lint",
            "pnpm run test:all"
        ]
    },
    "devDependencies": {
        "@fontsource/fira-mono": "^4.5.10",
        "@neoconfetti/svelte": "^1.0.0",
        "@playwright/experimental-ct-svelte": "^1.28.1",
        "@playwright/test": "^1.28.1",
        "@sveltejs/adapter-auto": "next",
        "@sveltejs/kit": "next",
        "@types/cookie": "^0.5.1",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vitest/ui": "^0.25.3",
        "autoprefixer": "^10.4.13",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.4",
        "postcss": "^8.4.19",
        "prettier": "^2.8.0",
        "prettier-plugin-svelte": "^2.8.1",
        "svelte": "^3.53.1",
        "svelte-check": "^2.9.2",
        "svelte-preprocess": "^4.10.7",
        "tailwindcss": "^3.2.4",
        "tslib": "^2.4.1",
        "typescript": "^4.9.3",
        "vite": "^3.2.4",
        "vitest": "^0.25.3"
    }
}
